@model IPagedList<EmployeeManagementSystem.Models.Employee>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Deleted Employees";
}

<h2>Deleted Employees</h2>

<!-- Search Form -->
<form method="get" class="row mb-3">
    <div class="col-md-6">
        <input name="search" class="form-control" placeholder="Search by name, department or email..."
               value="@ViewBag.CurrentFilter" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary">Search</button>
    </div>
</form>

@if (!Model.Any())
{
    <p>No deleted employees.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Department</th>
                <th>Position</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.FullName</td>
                    <td>@emp.Department</td>
                    <td>@emp.Position</td>
                    <td>@emp.Email</td>
                    <td>@emp.Salary.ToString("C")</td>
                    <td>
                        <!-- Restore Button triggers modal -->
                        <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#restoreModal-@emp.Id">
                            Restore
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="restoreModal-@emp.Id" tabindex="-1" aria-labelledby="restoreModalLabel-@emp.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="restoreModalLabel-@emp.Id">Confirm Restore</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to restore <strong>@emp.FullName</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form asp-action="Restore" method="post">
                                            <input type="hidden" name="id" value="@emp.Id" />
                                            <button type="submit" class="btn btn-success">Yes, Restore</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Modal -->
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination -->
    <div class="mt-3">
        @Html.PagedListPager(Model, page => Url.Action("Trash", new { page, search = ViewBag.CurrentFilter }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayEllipsesWhenNotShowingAllPageNumbers = true
        })
</div>
}
