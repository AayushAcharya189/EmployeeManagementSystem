@model IPagedList<EmployeeManagementSystem.Models.Employee>
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Deleted Employees";
}

<h1>Deleted Employees</h1>

<p>
    <a asp-action="Index" class="btn btn-primary">Back to Active Employees</a>
</p>

<!-- Search Form -->
<form method="get" class="row mb-3">
    <div class="col-md-6">
        <input name="search" class="form-control" placeholder="Search by name or department..."
               value="@ViewBag.CurrentFilter" />
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary">Search</button>
    </div>
</form>

<!-- Table of Deleted Employees -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Department)</th>
            <th>@Html.DisplayNameFor(model => model.First().Position)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Salary)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.FullName)</td>
                <td>@Html.DisplayFor(m => item.Department)</td>
                <td>@Html.DisplayFor(m => item.Position)</td>
                <td>@Html.DisplayFor(m => item.Email)</td>
                <td>@Html.DisplayFor(m => item.Salary)</td>
                <td>
                    <!-- Restore button -->
                    <form asp-action="Restore" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-success">Restore</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination Controls -->
<div class="mt-3">
    @Html.PagedListPager(
    Model,
    page => Url.Action("Deleted", new { page, search = ViewBag.CurrentFilter }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayEllipsesWhenNotShowingAllPageNumbers = true
        })
</div>
